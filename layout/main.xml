<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F6F9F6">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:orientation="vertical"
        android:layout_marginBottom="30dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:gravity="center">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/img"
            android:contentDescription="앱 로고"
            android:layout_marginBottom="12dp"
            android:scaleType="fitCenter" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PILL MOA"
            android:textColor="#32CD32"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 버튼 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#32CD32"
                android:elevation="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp"
                android:padding="20dp"
                android:clipToOutline="true">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/icon"
                    android:contentDescription="검색 아이콘"
                    android:layout_marginRight="16dp" />

                <TextView
                    android:id="@+id/Btn1"
                    android:layout_width="172dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="   의약품 정보 검색"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- 버튼 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#FFFFFF"
                android:elevation="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp"
                android:padding="20dp"
                android:clipToOutline="true">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/icon_1"
                    android:contentDescription="처방전 아이콘"
                    android:layout_marginRight="16dp" />

                <TextView
                    android:id="@+id/Btn2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="    처방전 열람"
                    android:layout_marginLeft="45dp"
                    android:textColor="#32CD32"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- 버튼 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#32CD32"
                android:elevation="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp"
                android:padding="20dp"
                android:clipToOutline="true">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/alram"
                    android:contentDescription="복약 알림 아이콘"
                    android:layout_marginRight="16dp" />

                <TextView
                    android:id="@+id/Btn3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="   복약 알림"
                    android:textColor="#FFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- 버튼 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#FFFF"
                android:elevation="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp"
                android:padding="20dp"
                android:clipToOutline="true">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/setting"
                    android:contentDescription="환경설정 아이콘"
                    android:layout_marginRight="16dp" />

                <TextView
                    android:id="@+id/Btn4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="    환경설정"
                    android:textColor="#32CD32"
                    android:layout_marginLeft="60dp"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <!-- 버튼 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#32CD32"
                android:elevation="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp"
                android:padding="20dp"
                android:clipToOutline="true">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/icon_2"
                    android:contentDescription="환경설정 아이콘"
                    android:layout_marginRight="16dp" />

                <TextView
                    android:id="@+id/Btn5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="    검색이력"
                    android:textColor="#F8F8F8"
                    android:layout_marginLeft="60dp"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
