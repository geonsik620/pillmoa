<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- 툴바 레이아웃 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/main_top_background"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- 뒤로가기 아이콘 -->
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/back"/>


        <!-- 타이틀 텍스트 -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="앱 환경설정"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:gravity="center"
            />

        <!-- 홈 아이콘 -->
        <ImageView
            android:id="@+id/btnH"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="TODO"
            android:src="@drawable/ic_home" /> <!-- 홈 아이콘으로 교체 -->
    </LinearLayout>

    <!-- 선택 항목들 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="16dp">

        <!-- 앱 잠금 기능 사용 -->
        <LinearLayout
            android:id="@+id/appLockOptionLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:background="@drawable/rounded_button_background"
            android:layout_marginBottom="8dp">

            <ImageView
                android:id="@+id/appLockOption"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_radio_unchecked"
                android:contentDescription="앱 잠금 기능" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="앱 잠금 기능 사용"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- 무선 데이터 사용 -->
        <LinearLayout
            android:id="@+id/dataUsageOptionLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:background="@drawable/rounded_button_white"
            android:layout_marginBottom="8dp">

            <ImageView
                android:id="@+id/dataUsageOption"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_radio_unchecked"
                android:contentDescription="무선 데이터 사용" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="무선 데이터 사용"
                android:textColor="#000000"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- PUSH 알림 이용 -->
        <LinearLayout
            android:id="@+id/pushNotificationOptionLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:background="@drawable/rounded_button_background"
            android:layout_marginBottom="8dp">

            <ImageView
                android:id="@+id/pushNotificationOption"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_radio_unchecked"
                android:contentDescription="PUSH 알림 이용" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="PUSH 알림 이용"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- 알람 기본 설정 -->
        <LinearLayout
            android:id="@+id/alarm_base_set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:background="@drawable/rounded_button_white">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_right"
                android:contentDescription="알람 기본 설정" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="알람 기본 설정"
                android:textColor="#000000"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>